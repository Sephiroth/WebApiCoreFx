{
  "Logging": {
    "IncludeScopes": true,
    "LogLevel": {
      "Default": "Trace",
      "System": "Information",
      "Microsoft": "Information"
    }
  },

  "AllowedHosts": "*",

  "ReRoutes": [
    {
      //"AuthenticationOptions": {
      //  "AuthenticationProviderKey": "IdentityApiKey",
      //  "AllowedScopes": []
      //},
      "DownstreamHostAndPorts": [
        {
          "host": "localhost",
          "port": 10010
        },
        {
          "host": "localhost",
          "port": 10011
        }
      ],
      "DownstreamPathTemplate": "/",
      "DownstreamScheme": "http",
      "LoadBalancerOptions": {
        "Type": "LeastConnection"
      },
      "UpstreamHttpMethod": [ "Post", "Get" ],
      "UpstreamPathTemplate": "/"
      //"QoSOptions": {
      //  "ExceptionsAllowedBeforeBreaking": 3,
      //  "DurationOfBreak": 5,
      //  "TimeoutValue": 5000
      //},
      //"RateLimitOptions": {
      //  "ClientWhitelist": [],
      //  "EnableRateLimiting": true,
      //  "Period": "1s",
      //  "PeriodTimespan": 1,
      //  "Limit": 1
      //}
    }
  ],

  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:10000",

    // 服务发现
    "ServiceDiscoveryProvider": {
      "Host": "localhost",
      "Port": 8500,
      "Type": "Consul",
      "PollingInterval": 100
    },
    // 负载均衡器
    "LoadBalancerOptions": {
      "Type": "CookieStickySessions", // 必须是CookieStickySessions
      "Key": "ASP.NET_SessionId",
      "Expiry": 1800000
    }
  }

}